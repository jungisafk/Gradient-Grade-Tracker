<?xml version="1.0" encoding="utf-8"?><!--
   Sample backup rules file; uncomment and customize as necessary.
   See https://developer.android.com/guide/topics/data/autobackup
   for details.
   Note: This file is ignored for devices older than API 31
   See https://developer.android.com/about/versions/12/backup-restore
-->
<full-backup-content>
    <!-- Exclude Room databases and DataStore so they are not backed up/restored -->
    <exclude domain="database" path="."/>
    <exclude domain="sharedpref" path="ui_state_prefs.preferences_pb"/>
    <!-- If you later re-enable allowBackup, these excludes ensure local-only data is wiped on uninstall and never restored. -->
</full-backup-content>